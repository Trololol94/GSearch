<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/rIm"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Au bon saucisson"
        android:id="@+id/rAuthor"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rIm"
        android:layout_toEndOf="@+id/rIm"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="8 Rue de l&apos;ETNA, 75002, Parfis France"
        android:id="@+id/PlaceAdress"
        android:layout_below="@+id/rAuthor"
        android:layout_toRightOf="@+id/rIm"
        android:layout_toEndOf="@+id/rIm"
        android:layout_margin="10dp" />
</RelativeLayout>